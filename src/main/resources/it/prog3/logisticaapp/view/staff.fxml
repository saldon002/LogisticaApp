<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.prog3.logisticaapp.controller.StaffController">

    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <ToolBar prefHeight="50.0">
                    <items>
                        <Label text="AREA RISERVATA | ">
                            <font><Font name="System Bold" size="14.0" /></font>
                        </Label>
                        <Label text="Ruolo:" />
                        <ComboBox fx:id="comboRuolo" prefWidth="150.0" promptText="Seleziona..." />
                        <Button defaultButton="true" onAction="#onLoginClick" text="ACCEDI" />
                        <Separator orientation="VERTICAL" />
                        <Label fx:id="lblUtente" text="Nessun utente loggato" textFill="#e74c3c">
                            <font><Font name="System Bold" size="12.0" /></font>
                        </Label>
                    </items>
                </ToolBar>

                <HBox fx:id="boxManager" alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #dff9fb;" visible="false" managed="false">
                    <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
                    <children>
                        <Label text="COMANDI MANAGER:" textFill="#130f40"><font><Font name="System Bold" size="12.0" /></font></Label>
                        <Label text="Algoritmo:" />
                        <ComboBox fx:id="comboStrategia" prefWidth="120.0" promptText="Next Fit" />
                        <Button onAction="#onCaricaClick" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="AVVIA CARICO (BIN PACKING)">
                            <font><Font name="System Bold" size="12.0" /></font>
                        </Button>
                    </children>
                </HBox>

                <HBox fx:id="boxCorriere" alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #fff2cc;" visible="false" managed="false">
                    <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
                    <children>
                        <Label text="DIARIO DI BORDO:" textFill="#d35400"><font><Font name="System Bold" size="12.0" /></font></Label>
                        <Label text="1. Seleziona il tuo Veicolo dalla tabella" />
                        <Label text="2. Inserisci Luogo:" />
                        <TextField fx:id="txtLuogoTappa" promptText="es. Hub Roma Nord" />
                        <Button onAction="#onRegistraTappaClick" style="-fx-background-color: #e67e22; -fx-text-fill: white;" text="REGISTRA TAPPA (Bulk Update)">
                            <font><Font name="System Bold" size="12.0" /></font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.4" BorderPane.alignment="CENTER">
            <items>
                <VBox>
                    <children>
                        <Label text="ðŸ“¦ MAGAZZINO (Merce in attesa)" style="-fx-padding: 5; -fx-font-weight: bold; -fx-background-color: #ecf0f1;" maxWidth="Infinity"/>
                        <TableView fx:id="tableColli" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colColloCodice" text="Codice" />
                                <TableColumn fx:id="colColloPeso" text="Peso" />
                                <TableColumn fx:id="colColloDest" text="Destinazione" />
                            </columns>
                            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>

                <VBox>
                    <children>
                        <Label text="ðŸš› FLOTTA VEICOLI (Seleziona qui per azioni corriere)" style="-fx-padding: 5; -fx-font-weight: bold; -fx-background-color: #ecf0f1;" maxWidth="Infinity"/>
                        <TableView fx:id="tableVeicoli" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colVeicoloTarga" text="Targa" />
                                <TableColumn fx:id="colVeicoloTipo" text="Tipo" />
                                <TableColumn fx:id="colVeicoloCapienza" text="Capienza" />
                                <TableColumn fx:id="colVeicoloCarico" text="Carico Attuale" />
                            </columns>
                            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </center>

    <bottom>
        <Label fx:id="lblStatus" text="Sistema Logistico Pronto." BorderPane.alignment="CENTER_LEFT">
            <padding><Insets bottom="5" left="10" top="5" /></padding>
        </Label>
    </bottom>
</BorderPane>