<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.prog3.logisticaapp.controller.LoginController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    <children>
        <Label text="LogisticaApp" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
        </Label>
        <Label text="Seleziona il tuo ruolo per accedere" textFill="#7f8c8d">
            <font>
                <Font size="14.0" />
            </font>
        </Label>

        <Separator prefWidth="300.0" />

        <Button mnemonicParsing="false" onAction="#onOpenManager" prefHeight="60.0" prefWidth="300.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-cursor: hand;" text="AREA MANAGER (Admin)">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>

        <Button mnemonicParsing="false" onAction="#onOpenCorriere" prefHeight="60.0" prefWidth="300.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand;" text="AREA CORRIERE">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>

        <Button mnemonicParsing="false" onAction="#onOpenCliente" prefHeight="60.0" prefWidth="300.0" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-cursor: hand;" text="TRACKING SPEDIZIONE">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>

        <Separator prefWidth="300.0" />

        <Label text="Progetto Prog3 - Logistica 1" textFill="#bdc3c7">
            <font>
                <Font size="10.0" />
            </font>
        </Label>
    </children>
</VBox>